@using AccommodationWebPage.Models;
@model UserProfileViewModel

<h3>Witaj @Model.Username</h3>
<div>
    <p>Korzystając z tego panelu możesz zarządzać swoim kontem.</p>
    <p>Możesz zmienić swoje dane osobowe lub hasło do konta.</p>
</div>
<hr />
<div class="form-group">
    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.Label(Model.Username, new { @class = "col-md-2 control-label" })        
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Rank, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.Label(Model.Rank, new {@class = "col-md-2 control-label"})
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.AvarageMark, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.Label(Model.AvarageMark, new { @class = "col-md-2 control-label" })
    </div>
</div>
<br/>
<hr/>
<br /><h4>Dane osobowe:</h4>
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(m => m.FirstName, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.Label(Model.FirstName, new {@class = "col-md-2 control-label"})
    </div>
</div>
<br/>
<div class="form-group">
    @Html.LabelFor(m => m.LastName, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.Label(Model.LastName, new {@class = "col-md-2 control-label"})
    </div>
</div>
<br/>
<div class="form-group">
    @Html.LabelFor(m => m.CompanyName, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.Label(Model.CompanyName, new {@class = "col-md-2 control-label"})
    </div>
</div>
<br/>
<div class="form-group">
    @Html.LabelFor(m => m.Email, new {@class = "col-md-2 control-label"})
    <div class="col-md-10">
        @Html.Label(Model.Email, new {@class = "col-md-2 control-label"})
    </div>
</div>
<br/>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="btn">@Html.ActionLink("Zmień dane", "ChangeUserData", "Manage")</div>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="btn">@Html.ActionLink("Zmień hasło", "ChangePassword", "Manage")</div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
