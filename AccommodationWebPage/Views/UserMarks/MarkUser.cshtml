@using AccommodationWebPage.Models;
@model MarkViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Dodaj ocenę użytkownikowi</h2>


@using (Html.BeginForm("MarkUser", "UserMarks", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            <span class="text-primary">Użytkownik:</span>  @Html.DisplayTextFor(m => Model.Username)
                @Html.DropDownListFor(m => Model.mark,
                    new SelectList(Enum.GetValues(typeof(Mark))),
                    "Wybierz ocenę")
            
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Zapisz" />
        </div>
    </div>
    
    <div class="form-group" style="visibility:collapse">
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ReservedOfferId, new { @class = "form-control" })
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}